.list
{
  width:100%;
  height:100vh;
}
/* 搜索框样式 */
.list_top
{
  width:100%;
  height:9%;
  display: flex;
  border-bottom:2rpx solid rgb(223,223,223);
}
.list_top_input
{
  width:83%;
  height:78%;
  display: flex;
  justify-content: flex-end;
  align-items: center;
  position: relative;
}
.list_top_input input
{
  width:90%;
  height:80%;
  padding-left: 5%;
  border-radius: 40rpx;
  background:white;
  border:1rpx solid rgb(227,227,227);
  font-size: 82%;
}
.list_top_input image
{
  width:7%;
  height:56%;
  position:absolute;
  left:88%;
  z-index: 1000;
}
.list_top_image
{
  width:17%;
  height:78%;
  display: flex;
  justify-content: center;
  align-items: center;
}
.list_top_imageOne
{
  width:72%;
  height:97%;
  margin-top:2%;
}
.list_top_imageTwo
{
  width:47%;
  height:69%;
  margin-top:3%;
}
/* 查找条件样式 */
.condition
{
  width:100%;
  height:7.5%;
  display: flex;
}
.condition_each
{
  width:25%;
  height:100%;
  font-size: 89%;
  display: flex;
  justify-content: center;
  align-items: center;
}
/* 横向布局 */
.crosswise
{
  width:97.5%;
  height:83.3%;
  background:rgb(247, 246, 246);
  overflow: hidden;
  overflow-y: auto;
  padding-left:2.5%
}
.crosswise_outerBox
{
  width:97%;
  height:23%;
  border-radius: 30rpx;
  margin-top:2%;
  display: flex;
  background: white;
}
.crosswise_image
{
  width:32%;
  height:100%;
}
.crosswise_image image
{
  width:100%;
  height:100%;
  border-radius:30rpx 0 0 30rpx;
}
.crosswise_introduce
{
  width:66%;
  height:100%;
  margin-left:2%;
  border-radius:0 30rpx 30rpx 0;
}
.crosswise_introduce_name
{
  width:97%;
  height:48%;
  font-size: 85%; 
  padding:0 3% 3% 0;
  border-radius:0 30rpx 0 0;
}
.crosswise_introduce_box
{
  width:100%;
  height:49%;
  display: flex;
}
.crosswise_introduce_box_price
{
  width:50%;
  height:85%;
}
.crosswise_introduce_box_price_top
{
  width: 100%;
  height:50%;
  display: flex;
  align-items: center;
  font-size: 98%;
  color:red;
}
.crosswise_introduce_box_price_bottom
{
  width: 100%;
  height:50%;
  display: flex;
  align-items: center;
  font-size: 72%;
  color:rgb(227,227,227);
}
.crosswise_introduce_box_icon
{
  width:50%;
  height:85%;
  display: flex;
  align-items: center;
  justify-content: flex-end;
}
.crosswise_introduce_box_icon image
{
  width:30%;
  height:73%;
  padding-right: 2%;
}
/* 纵向布局 */
.lengthways
{
  width:100%;
  height:83.3%;
  background:rgb(247, 246, 246);
  overflow: hidden;
  overflow-y: auto;
  display: flex;
  justify-content:space-around;
  flex-wrap: wrap;
}
/* 伪元素占满屏幕，达到弹性盒子除第一行之外所有元素依次从左排起 */
.lengthways:after {
  content:"";
  width:45%;
}
.lengthways_outerBox
{
  width:47%;
  height:60%;
  margin:3% 0 0 0;
  border-radius:30rpx 30rpx 30rpx 30rpx;
  background:white;
}
.lengthways_image
{
  width:100%;
  height:60%;
}
.lengthways_image image
{
  width:100%;
  height:100%;
  border-radius:30rpx 30rpx 0 0;
}
.lengthways_introduce
{
  width:100%;
  height:40%;
}
.lengthways_introduce_name
{
  width:94%;
  height:55%;
  padding:0 3% 0 3%;
  font-size: 80%;
}
.lengthways_introduce_box
{
  width:96%;
  height:45%;
  padding:0 0 0 3%;
  display: flex;
}
.lengthways_introduce_box_left
{
  width:70%;
  height:100%;
}
.lengthways_introduce_box_left_price
{
  width:100%;
  height:55%;
  color:red;
  font-size: 110%;
  display: flex;
  align-content: center;
}
.lengthways_introduce_box_left_sell
{
  width:100%;
  height:45%;
  color:rgb(51,51,51);
  font-size: 70%;
  display: flex;
  align-content: center;
}
.lengthways_introduce_box_right
{
  width:30%;
  height:100%;
  display: flex;
  justify-content: center;
  align-items: center;
}
.lengthways_introduce_box_right image
{
  width:70%;
  height:68%;
}

.recommend_text
{
  width:100%;
  height:9%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 80%;
  color:rgb(172,172,172);
}