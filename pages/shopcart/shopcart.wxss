.shop_cart_container {
  display: flex;
  justify-content: center;
  align-items: center;
  flex-wrap: wrap;
  width: 100%;
  height: 800rpx;
  background-color: #F2F2F2;

}

.shop_none_iamge {
  width: 100%;
  height: 400rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.shop_list_tabbar {
  width: 100%;
  height: 100rpx;
  position: absolute;
  bottom: 20rpx;
  /* border: 1px solid red; */
  left: 0rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.close {
  width: 30%;
  height: 100rpx;
  background-color: #E64340;
  text-align: center;
  line-height: 100rpx;
  color: white;
}

.heji {
  color: #E64340;
  padding-left: 40rpx;
}

.del {
  width: 50rpx;
  height: 50rpx;
  position: absolute;
  top: 80rpx;
  right: 40rpx;
}

.none_shop {
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-wrap: wrap;
  height: 400rpx;
}

.none_image {
  width: 100%;
  height: 200rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.none_image image {
  width: 120rpx;
  height: 120rpx;
}

.none_content {
  width: 100%;
  height: 120rpx;
  color: gray;
  display: flex;
  justify-content: center;
  align-items: center;

}

.none_look {
  width: 50%;
  height: 80rpx;
  /* border:1px solid red; */
  background-color: #E64340;
  color: white;
  text-align: center;
  border-radius: 20rpx;
  line-height: 80rpx;
}